interface PayError {
    InvalidInput(string msg);
    RuntimeError(PayErrorCode code, string msg);
    PermanentFailure(string msg);
};

enum PayErrorCode {
    "AlreadyUsedInvoice",
    "InvoiceExpired",
    "NoRouteFound",
    "PayingToSelf",
    "PaymentFailed",
    "PaymentTimeout",
    "RouteTooExpensive",
    "NodeUnavailable",
    "UnexpectedError",
};

[Enum]
interface UnsupportedDataType {
    BitcoinAddress();
    LnUrlAuth();
    NodeId();
    Url();
    Network(string network);
};

[Error]
interface DecodeDataError {
    LnUrlError(string msg);
